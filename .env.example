# Database
# For local Docker: postgresql://postgres:postgres@localhost:5432/lead_qualifier
# For Neon/Supabase: Get connection string from your provider
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lead_qualifier

# Vapi.ai - Voice Agent
# Get these from https://dashboard.vapi.ai
VAPI_API_KEY=your_vapi_api_key_here
VAPI_WEBHOOK_SECRET=your_webhook_secret_here
VAPI_PHONE_NUMBER_ID=your_phone_number_id_here

# Anthropic - Transcript Extraction
# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
API_URL=http://localhost:3000

# Frontend Configuration
# Leave empty for development (uses Vite proxy)
# Set to backend URL for production
VITE_API_URL=
